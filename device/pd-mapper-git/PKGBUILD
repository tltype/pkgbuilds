_mode=host
_crossdirect=false
_pkgname=pd-mapper
pkgname="$_pkgname-git"
pkgdesc="Qualcomm Protection Domain mapper"
pkgver=1.0.r7.ge7c42e1
pkgrel=1
_arches=specific
arch=(aarch64)
license=(BSD-3-Clause)
url="https://github.com/linux-msm/$_pkgname"
provides=("$_pkgname")
depends=(qrtr-git)
_commit=e7c42e1522249593302a5b8920b9e7b42dc3f25e
source=("git+$url#commit=$_commit")
sha256sums=(SKIP)

pkgver() {
    cd "$_pkgname"
    git describe --long --abbrev=7  --tags "$_commit" | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "$_pkgname"

    make prefix=/usr
}

package() {
    cd "$_pkgname"

    make prefix=/usr DESTDIR="$pkgdir/" install
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$_pkgname/COPYING
}
