# Maintainer: Raihan Ahamed <raihan1999ahamed@gmail.com>
# Original Author: Danct12 <danct12@disroot.org>
_mode=host
pkgname=purple-telegram
pkgdesc="Purple Telegram plugin"
pkgver=1.4.7.r3.gb08f30c
pkgrel=1
_arches=all
arch=(
    x86_64
    armv7h
    aarch64
)
license=(GPL)
url="https://github.com/majn/telegram-purple"
depends=(
    glib2
    libpurple
    libwebp
)
makedepends=(
    git
    xxd
)
_commit="b08f30c801fec10c50c33881fd63545215fa1ec4"
source=($pkgname::git+$url.git#commit=$_commit)
sha256sums=(SKIP)

pkgver() {
    cd "$pkgname"
    git describe --long --abbrev=7 --tags $_commit | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd "$pkgname"
    git submodule update --init --recursive
}

build() {
    cd "$pkgname"
    ./configure
    make
}

package() {
    cd "$pkgname"
    DESTDIR="$pkgdir" make install
}
